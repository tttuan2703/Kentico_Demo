@model DancingGoat.Models.Crushings.CrushingProductFilterCheckboxViewModel[]

@for (var i = 0; i < Model.Length; i++)
{
    @Html.HiddenFor(m => Model[i].Value)
    @Html.HiddenFor(m => Model[i].DisplayName)
    <span class="checkbox js-postback">
        <input asp-for="@Model[i].IsChecked" />
        <label asp-for="@Model[i].IsChecked">@HtmlLocalizer[Model[i].DisplayName]</label>
    </span>
}
