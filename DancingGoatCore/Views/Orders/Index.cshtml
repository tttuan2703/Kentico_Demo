@model IEnumerable<DancingGoat.Models.OrdersListViewModel>

@{
    ViewBag.Title = HtmlLocalizer["Your orders"].Value;
    ViewData["PageClass"] = "inverted no-bg";
}

<div class="back-account-link">
    <a asp-controller="Account" asp-action="YourAccount">&larr; @HtmlLocalizer["back to Your Account"]</a>
</div>
<div id="no-more-tables">

    <h2 style="text-align:center">@HtmlLocalizer["Your orders"]</h2>
    <table class="orders-table">
        <thead>
            <tr>
                <th class="column-id">@HtmlLocalizer["Order ID"]</th>
                <th class="column-date">@HtmlLocalizer["Order date"]</th>
                <th class="column-status">@HtmlLocalizer["Status"]</th>
                <th class="column-total">@HtmlLocalizer["Total"]</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                var dateOrder = order.OrderDate.ToString("dd/MM/yyyy");

                <tr>
                    <td class="column-id">
                        <span class="strong">@order.OrderInvoiceNumber</span>
                    </td>
                    <td class="column-date">@dateOrder</td>
                    <td class="column-status">
                        <span class="status">
                            @HtmlLocalizer[order.StatusName]
                        </span>
                    </td>
                    <td class="column-total">@order.FormattedTotalPrice</td>
                    <td>
                        <a asp-action="OrderDetail" asp-route-orderID="@order.OrderID" class="btn btn-terciary">@HtmlLocalizer["Order Detail"]</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

