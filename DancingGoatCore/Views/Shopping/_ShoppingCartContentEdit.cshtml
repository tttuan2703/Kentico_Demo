@using DancingGoat.Constants;
@model DancingGoat.Models.CartViewModel

@foreach (var cartItem in Model.CartItems)
{
    <div class="row">
        <div class="col-md-1 col-lg-1">
            @if (!string.IsNullOrEmpty(cartItem.SKUImagePath))
            {
                <div class="cart-item-image">
                    <a href="@Url.Action("ItemDetail", new { skuId = cartItem.SKUID })">
                        <img src="@cartItem.SKUImagePath" alt="@cartItem.SKUName" title="@cartItem.SKUName" />
                    </a>
                </div>
            }
        </div>

        <div class="col-md-3 col-lg-3">
            <div class="cart-item-info">
                @Html.ActionLink(cartItem.SKUName, "ItemDetail", new { skuId = cartItem.SKUID })
                @*<p class="h3">Price: @cartItem.</p>*@
            </div>
        </div>

        <div class="col-md-8 col-lg-8">
            <form asp-action="ShoppingCart" asp-controller="Shopping" method="post">
                <div class="cart-item-amount row">
                    <div class="col-lg-offset-1 col-md-offset-1 col-md-2 col-lg-2 cart-item-subtotal">
                        <span class="text-danger">@Model.FormatPrice(cartItem.TotalPrice)</span>
                    </div>
                    <div class="col-lg-offset-1 col-md-offset-1 col-md-2 col-lg-2">
                        <span style="float:left; margin-right:2px;">Qty</span>
                        <input type="hidden" name="ID" value="@cartItem.CartItemID" />
                        <input type="number" autocomplete="off" name="Units" value="@cartItem.CartItemUnits" class="form-control" />
                    </div>
                    <div class="col-md-2 col-lg-2">
                        <input type="submit" name="cartAction" value="@CartActionConstant.UPDATE" class="btn btn-default" style="float:right" />
                    </div>
                    <div class="col-md-2 col-lg-2">
                        <input type="submit" name="cartAction" value="@CartActionConstant.DELETE" class="btn btn-default" />
                    </div>
                </div>
            </form>
        </div>

        @Html.ValidationMessage(cartItem.CartItemID.ToString(), new { @class = "red"})
    </div>
    <hr />
}
