@model DancingGoat.Models.BillingAddressViewModel


<div class="row">
    <div class="col-md-5 col-lg-5">
        <span class="sp-title">AddressLine1:</span>
    </div>
    <div class="col-md-7 col-lg-7">
        <span>@Model.BillingAddressLine1</span>
    </div>
</div>
<div class="row">
    <div class="col-md-5 col-lg-5">
        <span class="sp-title">AddressLine2:</span>
    </div>
    <div class="col-md-7 col-lg-7">
        <span>@Model.BillingAddressLine2</span>
    </div>
</div>
<div class="row">
    <div class="col-md-5 col-lg-5">
        <span class="sp-title">AddressCity:</span>
    </div>
    <div class="col-md-7 col-lg-7">
        <span>@Model.BillingAddressCity</span>
    </div>
</div>
@if (Model.BillingAddressState != null)
{
    <div class="row">
        <div class="col-md-5 col-lg-5">
            <span class="sp-title">PostalCode & State:</span>
        </div>
        <div class="col-md-7 col-lg-7">
            <span>@Model.BillingAddressPostalCode, @Model.BillingAddressState</span>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-5 col-lg-5">
            <span class="sp-title">PostalCode:</span>
        </div>
        <div class="col-md-7 col-lg-7">
            <span>@Model.BillingAddressPostalCode</span>
        </div>
    </div>
}
<div class="row">
    <div class="col-md-5 col-lg-5">
        <span class="sp-title">AddressCountry:</span>
    </div>
    <div class="col-md-7 col-lg-7">
        <span>@Model.BillingAddressCountry</span>
    </div>
</div>
